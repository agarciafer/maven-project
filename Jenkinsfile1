pipeline {
    agent any

    parameters {
         string(name: 'tomcat_dev', defaultValue: '192.168.33.10', description: 'Staging Server')
         string(name: 'tomcat_prod', defaultValue: '192.168.33.10', description: 'Production Server')
    }

    triggers {
         pollSCM('* * * * *')
     }
    
    tools {
        maven 'jenkins-maven'
    }

stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        sh "cp **/target/*.war /tomcat-staging/webapps/"
                    }
                }

                stage ("Deploy to Production"){
                    steps {
                        sh "cp **/target/*.war /tomcat-prod/webapps/"
                    }
                }
            }
        }
    }
}
